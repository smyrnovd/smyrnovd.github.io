<MainLayout>
  <main>
    <div class="lg:pt-24 pt-12">
      <div class="text-center">
        <label class="swap swap-flip text-9xl">
          <!-- this hidden checkbox controls the state -->
          <input type="checkbox" />

          <div class="swap-on max-w-[222px]">
            <img
              id="qr-code"
              src="frame.svg"
              alt="qr code"
              class="mx-auto rounded-3xl w-full"
            />
          </div>
          <div class="swap-off max-w-[222px]">
            <img
              id="author-img"
              class="mx-auto mask mask-circle w-full"
              src="profile.jpg"
              alt="avatar"
            />
          </div>
        </label>

        <h2 class="permanent-marker-regular lg:text-5xl text-4xl pt-3">
          Dmitry Smyrnov
        </h2>
        <div class="flex flex-col w-full">
          <div class="divider lg:text-2xl text-xl">
            Engineer, Software-developer
          </div>
          <p class="lg:text-lg text-md italic mt-[-8px]">
            Stack: Angular, React, Vue, PHP, Ruby
          </p>
        </div>
      </div>
